<?xml version="1.0" encoding="UTF-8"?>
<persistence version="2.0" xmlns="http://java.sun.com/xml/ns/persistence" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://java.sun.com/xml/ns/persistence http://java.sun.com/xml/ns/persistence/persistence_2_0.xsd">
	<persistence-unit name="LoloCar" transaction-type="RESOURCE_LOCAL">
		<class>com.edd.Entity.Adresse</class>
		<class>com.edd.Entity.ConditionsTrajet</class>
		<class>com.edd.Entity.Marker</class>
		<class>com.edd.Entity.Route</class>
		<class>com.edd.Entity.User</class>
		<properties>
			<property name="javax.persistence.jdbc.driver" value="com.mysql.jdbc.Driver"/>
			<property name="javax.persistence.jdbc.url" value="jdbc:mysql://localhost:3306/loloCar"/>
			<property name="javax.persistence.jdbc.user" value="root"/>
			<property name="eclipselink.temporal.mutable" value="true"/>
			<property name="eclipselink.ddl-generation.output-mode" value = "both" /> 
			<property name="eclipselink.ddl-generation" value = "drop-and-create-tables" />
		</properties>
	</persistence-unit>
</persistence>
